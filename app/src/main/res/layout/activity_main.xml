<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/btnCamara"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="585dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="147dp"
        android:layout_marginBottom="0dp"
        tools:context=".MainActivity" />

    <Button
        android:id="@+id/btnCamara"
        android:layout_width="226dp"
        android:layout_height="38dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="139dp"
        android:layout_marginLeft="139dp"
        android:layout_marginTop="9dp"
        android:onClick="moverCamaraMapa"
        android:text="Cantón Pichincha"
        tools:ignore="DuplicateIds" />

    <Button
        android:id="@+id/btnVsNormal"
        android:layout_width="115dp"
        android:layout_height="37dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="8dp"
        android:onClick="VistaNormal"
        android:text="Normal" />

    <Button
        android:id="@+id/btnSatelite"
        android:layout_width="115dp"
        android:layout_height="37dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="41dp"
        android:onClick="VistaSatelite"
        android:text="Satelite" />

    <Button
        android:id="@+id/btnHybrida"
        android:layout_width="115dp"
        android:layout_height="37dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="14dp"
        android:layout_marginLeft="14dp"
        android:layout_marginTop="74dp"
        android:onClick="VistaHybrida"
        android:text="Hybrida" />

    <Button
        android:id="@+id/btnTopografia"
        android:layout_width="115dp"
        android:layout_height="36dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="105dp"
        android:onClick="VistaTopográfico"
        android:text="Topografia" />

    <Button
        android:id="@+id/btnAnimar"
        android:layout_width="222dp"
        android:layout_height="36dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="142dp"
        android:layout_marginLeft="142dp"
        android:layout_marginTop="47dp"
        android:onClick="animarCamaraMapa"
        android:text="Animar" />

</RelativeLayout>